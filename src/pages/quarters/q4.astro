---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allLogs = await getCollection('logs');
const allReviews = await getCollection('reviews');
const quartersCollection = await getCollection('quarters');

const q4Logs = allLogs.filter(log => log.data.quarter === 4);
const q4Reviews = allReviews.filter(review => review.data.quarter === 4);
const q4Content = quartersCollection.find(q => q.data.quarter === 4);
const { Content } = q4Content ? await q4Content.render() : { Content: null };

const baseUrl = import.meta.env.BASE_URL;

const totalLogsQ4 = q4Logs.length;
const totalReviewsQ4 = q4Reviews.length;
const totalHunting = q4Logs.reduce((sum, log) => sum + (log.data.daily_hacking || 0), 0);
const totalHours = q4Logs.reduce((sum, log) => sum + (log.data.daily_total || 0), 0);

function formatTime(minutes: number | undefined): string {
  if (minutes === undefined || minutes === 0) return '0m';
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  if (hours === 0) return `${mins}m`;
  if (mins === 0) return `${hours}h`;
  return `${hours}h ${mins}m`;
}
---

<BaseLayout title="Q4 Reference - Bug Bounty Journey" description="Quarter 4 reference page">
  <div class="container-custom py-12">
    <div class="mb-12">
      <div class="mb-4">
        <a href={`${baseUrl}/roadmap/`} class="text-soft-indigo hover:text-sage transition text-sm font-medium inline-flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Roadmap
        </a>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Quarter <span class="text-gradient">4</span></h1>
      <p class="text-xl text-slate-300 max-w-3xl">Mastery Phase - Excellence & Strategic Planning</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
      <div class="card text-center py-6 border-soft-indigo/30 hover:border-soft-indigo/50 transition-colors">
        <div class="text-3xl font-bold text-soft-indigo mb-2">{totalLogsQ4}</div>
        <div class="text-sm text-slate-400">Daily Logs</div>
      </div>
      <div class="card text-center py-6 border-sage/30 hover:border-sage/50 transition-colors">
        <div class="text-3xl font-bold text-sage mb-2">{totalReviewsQ4}</div>
        <div class="text-sm text-slate-400">Weekly Reviews</div>
      </div>
      <div class="card text-center py-6 border-soft-indigo/30 hover:border-soft-indigo/50 transition-colors">
        <div class="text-3xl font-bold text-soft-indigo mb-2">{formatTime(totalHunting)}</div>
        <div class="text-sm text-slate-400">Hunting Time</div>
      </div>
      <div class="card text-center py-6 border-sage/30 hover:border-sage/50 transition-colors">
        <div class="text-3xl font-bold text-sage mb-2">{formatTime(totalHours)}</div>
        <div class="text-sm text-slate-400">Total Time</div>
      </div>
    </div>

    {Content && (
      <div class="max-w-4xl mx-auto prose prose-invert mb-12">
        <Content />
      </div>
    )}

    <nav class="flex flex-wrap gap-3 justify-center mt-16 pt-8 border-t border-slate-700">
      <a href={`${baseUrl}/quarters/q3/`} class="btn btn-secondary inline-flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Q3 Reference
      </a>
      <a href={`${baseUrl}/roadmap/`} class="btn btn-secondary">Back to Roadmap</a>
    </nav>
  </div>
</BaseLayout>

<style>
  :global(.prose h2) { @apply text-2xl font-bold mt-8 mb-4 text-slate-50; }
  :global(.prose h3) { @apply text-xl font-bold mt-6 mb-3 text-slate-100; }
  :global(.prose p) { @apply text-slate-300 mb-4; }
  :global(.prose ul), :global(.prose ol) { @apply mb-4 ml-6 space-y-2; }
  :global(.prose li) { @apply text-slate-300; }
  :global(.prose strong) { @apply text-slate-50; }
  :global(.prose table) { @apply w-full border-collapse mb-6; }
  :global(.prose th) { @apply bg-slate-800 px-4 py-2 text-left font-semibold text-slate-50 border border-slate-700; }
  :global(.prose td) { @apply px-4 py-2 border border-slate-700 text-slate-300; }
  :global(.prose tr:hover) { @apply bg-slate-800/50; }
</style>
