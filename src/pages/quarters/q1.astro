---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get Q1 logs and reviews
const allLogs = await getCollection('logs');
const allReviews = await getCollection('reviews');
const q1Logs = allLogs.filter(log => log.data.quarter === 1);
const q1Reviews = allReviews.filter(review => review.data.quarter === 1);

const baseUrl = import.meta.env.BASE_URL;

// Calculate Q1 stats
const totalLogsQ1 = q1Logs.length;
const totalReviewsQ1 = q1Reviews.length;
const totalHunting = q1Logs.reduce((sum, log) => sum + (log.data.hunting || 0), 0);
const totalHours = q1Logs.reduce((sum, log) => sum + (log.data.total || 0), 0);

function formatTime(minutes: number | undefined): string {
  if (minutes === undefined || minutes === 0) {
    return '0m';
  }
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  if (hours === 0) return `${mins}m`;
  if (mins === 0) return `${hours}h`;
  return `${hours}h ${mins}m`;
}
---

<BaseLayout title="Q1 Reference" description="Quarter 1 reference page with 12-Week Outcome and Phase Goals">
  <div class="container-custom py-12">
    <!-- Header -->
    <div class="mb-12">
      <div class="mb-4">
        <a href={`${baseUrl}/logs/`} class="text-soft-indigo hover:text-sage transition text-sm font-medium">
          ← Back to Timeline
        </a>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Quarter <span class="text-gradient">1</span> Reference
      </h1>
      <p class="text-xl text-slate-300 max-w-3xl">
        Quick reference for Q1 12-Week Outcome and Phase Goals
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
      <div class="card text-center py-4">
        <div class="text-2xl font-bold text-soft-indigo">{totalLogsQ1}</div>
        <div class="text-sm text-slate-400">Daily Logs</div>
      </div>
      <div class="card text-center py-4">
        <div class="text-2xl font-bold text-sage">{totalReviewsQ1}</div>
        <div class="text-sm text-slate-400">Weekly Reviews</div>
      </div>
      <div class="card text-center py-4">
        <div class="text-2xl font-bold text-soft-indigo">{formatTime(totalHunting)}</div>
        <div class="text-sm text-slate-400">Hunting Time</div>
      </div>
      <div class="card text-center py-4">
        <div class="text-2xl font-bold text-sage">{formatTime(totalHours)}</div>
        <div class="text-sm text-slate-400">Total Time</div>
      </div>
    </div>

    <!-- 12-Week Outcome -->
    <section class="mb-12">
      <div class="card">
        <h2 class="text-3xl font-bold mb-6 flex items-center">
          <span class="text-gradient">12-Week Outcome</span>
        </h2>
        <div class="prose prose-lg max-w-none text-slate-300">
          <p>Define your ultimate goal for this quarter - what you want to achieve by the end of 12 weeks.</p>
          <ul>
            <li>Establish a strong foundation in web application security fundamentals</li>
            <li>Complete core vulnerability recognition training (OWASP Top 10)</li>
            <li>Join 3+ bug bounty platforms and create active profiles</li>
            <li>Document methodology and create personal playbook</li>
            <li>Target: Find first valid bug report (even if minor)</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Phase Goals -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 flex items-center">
        <span class="text-gradient">Phase Goals</span>
      </h2>
      
      <div class="space-y-6">
        <!-- Phase 1 -->
        <div class="card">
          <h3 class="text-2xl font-bold mb-4 text-soft-indigo">Phase 1: Foundation (Weeks 12-9)</h3>
          <div class="prose prose-lg max-w-none text-slate-300">
            <p><strong>Goal:</strong> Build Core Foundation</p>
            <ul>
              <li>Master HTTP/HTTPS fundamentals</li>
              <li>Learn OWASP Top 10 vulnerabilities</li>
              <li>Set up professional testing environment</li>
              <li>Complete at least 2 security courses</li>
              <li>Establish daily study routine (6+ hours/day)</li>
            </ul>
          </div>
        </div>

        <!-- Phase 2 -->
        <div class="card">
          <h3 class="text-2xl font-bold mb-4 text-soft-indigo">Phase 2: Execution (Weeks 8-5)</h3>
          <div class="prose prose-lg max-w-none text-slate-300">
            <p><strong>Goal:</strong> Apply Knowledge & Hunt</p>
            <ul>
              <li>Start active bug bounty hunting on HackerOne/Bugcrowd</li>
              <li>Test at least 3 live applications</li>
              <li>Focus on XSS, CSRF, and SQLi vulnerabilities</li>
              <li>Document all findings systematically</li>
              <li>Target: Submit first 5 bug reports</li>
            </ul>
          </div>
        </div>

        <!-- Phase 3 -->
        <div class="card">
          <h3 class="text-2xl font-bold mb-4 text-soft-indigo">Phase 3: Mastery (Weeks 4-1)</h3>
          <div class="prose prose-lg max-w-none text-slate-300">
            <p><strong>Goal:</strong> Refine & Achieve Results</p>
            <ul>
              <li>Focus on high-impact vulnerability types</li>
              <li>Develop specialized testing skills</li>
              <li>Build reputation on platforms (5+ accepted reports)</li>
              <li>Create comprehensive security notes</li>
              <li>Plan strategy for Q2 (deeper specialization)</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <div class="flex gap-4 justify-center mt-12 pt-8 border-t border-slate-700">
      <a href={`${baseUrl}/logs/`} class="btn btn-secondary">
        ← Back to Timeline
      </a>
      <a href={`${baseUrl}/quarters/q2/`} class="btn btn-secondary">
        Q2 Reference →
      </a>
    </div>
  </div>
</BaseLayout>
