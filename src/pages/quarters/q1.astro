---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get Q1 logs and reviews
const allLogs = await getCollection('logs');
const allReviews = await getCollection('reviews');
const q1Logs = allLogs.filter(log => log.data.quarter === 1);
const q1Reviews = allReviews.filter(review => review.data.quarter === 1);

const baseUrl = import.meta.env.BASE_URL;

// Calculate Q1 stats
const totalLogsQ1 = q1Logs.length;
const totalReviewsQ1 = q1Reviews.length;
const totalHunting = q1Logs.reduce((sum, log) => sum + (log.data.hunting || 0), 0);
const totalHours = q1Logs.reduce((sum, log) => sum + (log.data.total || 0), 0);

function formatTime(minutes: number | undefined): string {
  if (minutes === undefined || minutes === 0) {
    return '0m';
  }
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  if (hours === 0) return `${mins}m`;
  if (mins === 0) return `${hours}h`;
  return `${hours}h ${mins}m`;
}
