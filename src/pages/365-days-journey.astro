---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Get 365-days-journey content
const journey365Collection = await getCollection("365-days-journey");
const journey365 = journey365Collection[0];
const { Content } = await journey365.render();

const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout
    title="Twitter 365 Days Challenge - Previous Journey"
    description="A comprehensive review of my 365-day Twitter challenge where I built web development skills and learned cybersecurity fundamentals"
>
    <div class="relative">
        <!-- Hero Section with Gradient Background -->
        <div class="hero-gradient relative overflow-hidden">
            <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
            <div class="container-custom py-20 relative z-10">
                <!-- Back Link -->
                <div class="mb-8">
                    <a
                        href={`${baseUrl}/about/`}
                        class="text-soft-indigo hover:text-sage transition text-sm font-medium inline-flex items-center group"
                    >
                        <svg
                            class="w-4 h-4 mr-2 group-hover:-translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Back to About
                    </a>
                </div>

                <!-- Hero Content -->
                <div class="max-w-4xl">
                    <div
                        class="inline-block px-4 py-2 bg-soft-indigo/20 border border-soft-indigo/30 rounded-full mb-6"
                    >
                        <span class="text-soft-indigo font-semibold text-sm"
                            >365 DAYS JOURNEY</span
                        >
                    </div>
                    <h1
                        class="text-5xl md:text-7xl font-bold mb-6 leading-tight"
                    >
                        Twitter <span class="text-gradient">365 Days</span><br
                        />
                        Challenge
                    </h1>
                    <p
                        class="text-xl md:text-2xl text-slate-300 mb-8 max-w-2xl leading-relaxed"
                    >
                        From mechanical engineering graduate to full-stack web
                        developer and aspiring bug bounty hunter.
                    </p>

                    <!-- Stats Cards -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                        <div class="stats-card">
                            <div
                                class="text-3xl font-bold text-soft-indigo mb-1"
                            >
                                365
                            </div>
                            <div class="text-sm text-slate-400">
                                Days of Learning
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="text-3xl font-bold text-sage mb-1">
                                20+
                            </div>
                            <div class="text-sm text-slate-400">
                                Projects Built
                            </div>
                        </div>
                        <div class="stats-card">
                            <div
                                class="text-3xl font-bold text-soft-indigo mb-1"
                            >
                                2.5K+
                            </div>
                            <div class="text-sm text-slate-400">
                                Reports Read
                            </div>
                        </div>
                        <div class="stats-card">
                            <div class="text-3xl font-bold text-sage mb-1">
                                450
                            </div>
                            <div class="text-sm text-slate-400">
                                Hours Hunting
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container-custom py-16">
            <!-- Journey Markdown Content -->
            <div class="max-w-5xl mx-auto">
                <div class="content-wrapper">
                    <Content />
                </div>
            </div>

            <!-- CTA Section -->
            <div class="mt-24 max-w-5xl mx-auto">
                <div class="cta-card">
                    <div
                        class="absolute top-0 right-0 w-64 h-64 bg-soft-indigo/10 rounded-full blur-3xl"
                    >
                    </div>
                    <div
                        class="absolute bottom-0 left-0 w-64 h-64 bg-sage/10 rounded-full blur-3xl"
                    >
                    </div>

                    <div class="relative z-10 text-center py-16 px-8">
                        <h2 class="text-4xl md:text-5xl font-bold mb-6">
                            Ready to Follow My <span class="text-gradient"
                                >Next Journey</span
                            >?
                        </h2>
                        <p
                            class="text-xl text-slate-300 mb-10 max-w-2xl mx-auto"
                        >
                            Now I'm applying everything I learned to become a
                            professional bug bounty hunter using the 12 Week
                            Year methodology.
                        </p>
                        <div class="flex gap-4 justify-center flex-wrap">
                            <a
                                href={`${baseUrl}/logs/`}
                                class="btn btn-primary text-lg px-8 py-4"
                            >
                                <svg
                                    class="w-5 h-5 mr-2 inline"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                </svg>
                                View Current Timeline
                            </a>
                            <a
                                href={`${baseUrl}/about/`}
                                class="btn bg-slate-700/50 border-slate-600 hover:bg-slate-600 text-lg px-8 py-4"
                            >
                                Learn About This Journey
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    /* Hero Gradient Background */
    .hero-gradient {
        background: linear-gradient(
            135deg,
            rgba(129, 140, 248, 0.1) 0%,
            rgba(147, 197, 253, 0.05) 25%,
            rgba(16, 24, 39, 0) 50%,
            rgba(134, 239, 172, 0.05) 75%,
            rgba(134, 239, 172, 0.1) 100%
        );
    }

    .bg-grid-pattern {
        background-image:
            linear-gradient(rgba(148, 163, 184, 0.1) 1px, transparent 1px),
            linear-gradient(
                90deg,
                rgba(148, 163, 184, 0.1) 1px,
                transparent 1px
            );
        background-size: 50px 50px;
    }

    /* Stats Cards */
    .stats-card {
        @apply bg-charcoal/50 backdrop-blur-sm border border-slate-700/50 rounded-xl p-4 text-center;
        @apply hover:border-soft-indigo/50 transition-all duration-300;
        @apply hover:transform hover:-translate-y-1;
    }

    /* Content Wrapper Styling */
    .content-wrapper {
        @apply bg-charcoal/30 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 md:p-12;
    }

    /* CTA Card */
    .cta-card {
        @apply relative bg-gradient-to-br from-charcoal/80 to-slate-900/80;
        @apply backdrop-blur-md border border-slate-700/50 rounded-3xl overflow-hidden;
    }

    /* Enhanced Prose Styles */
    :global(.content-wrapper h2) {
        @apply text-3xl md:text-4xl font-bold mt-12 mb-6 text-slate-50;
        @apply border-l-4 border-soft-indigo pl-6;
    }

    :global(.content-wrapper h3) {
        @apply text-2xl md:text-3xl font-bold mt-8 mb-4 text-slate-100;
    }

    :global(.content-wrapper h4) {
        @apply text-xl font-semibold mt-6 mb-3 text-slate-200;
    }

    :global(.content-wrapper p) {
        @apply text-slate-300 mb-6 leading-relaxed text-lg;
    }

    :global(.content-wrapper ul) {
        @apply mb-6 ml-6 space-y-3 list-disc;
    }

    :global(.content-wrapper ol) {
        @apply mb-6 ml-6 space-y-3 list-decimal;
    }

    :global(.content-wrapper ul ul) {
        @apply mt-3 list-disc;
    }

    :global(.content-wrapper ul ul ul) {
        @apply list-disc;
    }

    :global(.content-wrapper li) {
        @apply text-slate-300 ml-2 leading-relaxed;
    }

    :global(.content-wrapper li::marker) {
        @apply text-soft-indigo;
    }

    :global(.content-wrapper strong) {
        @apply text-slate-50 font-semibold;
    }

    :global(.content-wrapper code) {
        @apply bg-slate-800/80 px-3 py-1 rounded-md text-soft-indigo font-mono text-sm;
    }

    :global(.content-wrapper a) {
        @apply text-soft-indigo hover:text-sage transition-colors underline decoration-soft-indigo/30;
        @apply hover:decoration-sage/50;
    }

    :global(.content-wrapper hr) {
        @apply border-slate-700 my-12;
    }

    :global(.content-wrapper blockquote) {
        @apply border-l-4 border-soft-indigo pl-6 italic text-slate-400 my-8;
        @apply bg-slate-800/30 py-4 rounded-r-lg;
    }

    :global(.content-wrapper aside) {
        @apply bg-slate-800/50 border-l-4 border-sage p-6 rounded-r-lg my-8;
    }

    :global(.content-wrapper img) {
        @apply rounded-xl shadow-2xl my-10 border border-slate-700/50;
        @apply hover:border-soft-indigo/30 transition-all duration-300;
        @apply hover:shadow-soft-indigo/20;
    }

    :global(.content-wrapper table) {
        @apply w-full border-collapse mb-8 rounded-lg overflow-hidden;
    }

    :global(.content-wrapper th) {
        @apply bg-slate-800 px-6 py-3 text-left font-semibold text-slate-50 border border-slate-700;
    }

    :global(.content-wrapper td) {
        @apply px-6 py-4 border border-slate-700 text-slate-300;
    }

    :global(.content-wrapper tr:hover) {
        @apply bg-slate-800/50;
    }

    /* Animations */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .content-wrapper {
        animation: fadeIn 0.6s ease-out;
    }
</style>
